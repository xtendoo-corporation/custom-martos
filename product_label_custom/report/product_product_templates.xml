<odoo>
    <data>
        <template id="report_simple_product_label_38x21">
            <t t-call="web.html_container">
            <t t-set="barcode_size" t-value="'width:33mm;height:14mm'"/>
            <t t-set="table_style" t-value="'width:97mm;height:37.1mm;border:1px solid black;page-break-inside:avoid;'"/>
            <t t-foreach="quantity.items()" t-as="barcode_and_qty_by_product">
                <t t-set="product" t-value="barcode_and_qty_by_product[0]"/>
                <t t-foreach="barcode_and_qty_by_product[1]" t-as="barcode_and_qty">
                    <t t-set="barcode" t-value="barcode_and_qty[0]"/>
                    <t t-foreach="range(barcode_and_qty[1])" t-as="qty">
                        <div class="o_label_full" t-att-style="table_style">
                            <div class="o_label_reference"
                                 style="font-size:20pt; text-align: right; margin-right:15px;">
                                <span t-field="product.default_code"/>
                            </div>

                            <span style="font-size:16pt; text-align: left; margin-left:15px;">
                                <strong>P.V.P.</strong>
                            </span>
                            <div class="o_label_price"
                                 style="font-size:22pt; font-weight:bold; text-align: right; margin-right:15px;">
                                <span t-field="product.list_price"/>
                                <span> â‚¬</span>
                            </div>
                        </div>
                    </t>
                </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
