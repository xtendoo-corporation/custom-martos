<templates id="template" xml:space="preserve">
    <t t-name="pos_cost_report.OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension">
        <xpath expr="(//div[@class='pos-receipt-order-data'])[last()]" position="replace">
            <div class="pos-receipt-order-data">
                <p>Con la tecnolog√≠a de https://xtendoo.es/</p>
            </div>
        </xpath>
        <xpath expr="//ReceiptHeader" position="after">
            <div class="pos-receipt-order-data">
                <div t-esc="props.data.name"/>
                <div id="order-date" t-esc="props.data.date"/>
            </div>
            <br/>
        </xpath>
    </t>
</templates>
