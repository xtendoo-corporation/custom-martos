<odoo>
    <data>
        <template id="pos_session_sales_details" inherit_id="point_of_sale.pos_session_sales_details">
             <xpath expr="//tr[td/strong/span[@t-out=&quot;products_info['qty']&quot;]]" position="after">
                 <tr>
                    <td>
                        <strong>Coste total:</strong>
                    </td>
                    <td/>
                    <td/>
                    <td class="text-end">
                        <strong>
                        <span t-out='sum_total_cost' t-options="{'widget': 'float', 'precision': currency['precision']}">1.00</span>
                        <span t-out='currency["symbol"]'>$</span>
                        </strong>
                    </td>
                 </tr>
                 <tr>
                    <td>
                        <strong>Margen total:</strong>
                    </td>
                    <td/>
                    <td/>
                    <td class="text-end">
                        <strong>
                        <span t-out='sum_margin' t-options="{'widget': 'float', 'precision': currency['precision']}">1.00</span>
                        <span t-out='currency["symbol"]'>$</span>
                        </strong>
                    </td>
                 </tr>
             </xpath>
        </template>
    </data>
</odoo>
